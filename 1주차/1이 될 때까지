import java.util.*;

public class Main{
  public static void main(String[] args){
    Scanner sc = new Scanner(System.in);
    
    int n = sc.nextInt();
    int k = sc.nextInt();
    
    int cnt = 0;
    while(n>=k){
      while(n%k!=0){
        n = n - 1;
        cnt++;
      }
      n = n/k;
      cnt++;
    }
    while(n>1){
      n = n-1;
      cnt++;
    }
    
    System.out.println(cnt);
  }
}
